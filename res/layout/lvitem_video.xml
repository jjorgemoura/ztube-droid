<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/imageView_vd_thumbnail"
        android:layout_width="142dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_launcher" 
        android:contentDescription="@string/listview_image_description"/>

    <TextView
        android:id="@+id/textView_vd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_vd_thumbnail"
        android:layout_toRightOf="@+id/imageView_vd_thumbnail"
        android:text="Playlist Title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_vd_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_vd_title"
        android:layout_below="@+id/textView_vd_title"
        android:text="Playlist Summary"
        android:textSize="12sp" />

</RelativeLayout>
