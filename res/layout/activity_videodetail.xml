<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<!--     <ImageView -->
<!--         android:id="@+id/imageViewVideoDetail" -->
<!--         android:layout_width="142dp" -->
<!--         android:layout_height="80dp" -->
<!--         android:src="@drawable/ic_launcher" /> -->
    
    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtubeplayer"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
         />

    <TextView
        android:id="@+id/textView_vdetail_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="" 
        android:textSize="18sp" 
        android:background="@color/zColorPumpkin"/>

    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:orientation="horizontal" 
    	android:padding="10dp"
    	android:background="@color/zColorSunFlower">
        
        
        <TextView
	        android:id="@+id/textView_vdetail_author"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=""
	        android:textSize="12sp" />

        <TextView
	        android:id="@+id/textView_vdetail_qt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=""
	        android:textSize="14sp" />
        
        <TextView
	        android:id="@+id/textView_vdetail_like"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=""
	        android:textSize="10sp" />
        
        <TextView
	        android:id="@+id/textView_vdetail_dislike"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=""
	        android:textSize="10sp" />
    	
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical" 
    	android:padding="10dp"
    	android:background="@color/zColorPomegranate">
    
        <TextView
	        android:id="@+id/textView_vdetail_videoduration"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=""
	        android:textSize="10sp"
	        android:gravity="right" />
        
    	<TextView
	        android:id="@+id/textView_vdetail_date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=""
	        android:textSize="10sp"
	        android:gravity="right" />

    	<TextView
    	    android:id="@+id/textView_vdetail_description"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="" 
    	    android:textSize="10sp"/>

    </LinearLayout>
    
    

</LinearLayout>
